{
  "manifest_version": 3,
  "name": "Tab Drawer",
  "version": "1.0",
  "description": "A resizable tab drawer that shows all browser tabs on the left side",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "identity",
    "bookmarks"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["drawer.css"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["drawer.html", "newtab.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "1029697602090-2nmos3cmqudloasjpajjefr8id1fefl2.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 